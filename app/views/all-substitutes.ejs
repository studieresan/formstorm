

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Home</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/uikit.min.css" />
  </head>
  <body>
    <div class="uk-container uk-container-small">
      <a href="/">
        <button class="uk-button-default uk-button-small uk-margin-top" type="button" style="padding: 5px 15px 5px 15px;">âœ•</button>
      </a>
  
      <h3>Substitutes (<%= substitutes.length %>)</h3>
      <table class="sortable uk-table uk-table-divider">
        <thead>
          <tr>
            <th>Name</th>
            <th>N.o. events</th>
          </tr>
        </thead>
        <tbody>
          <% substitutes.forEach((substitute) => { %>
            <tr>
              <td>
                <%= substitute.real_name %>
              </td>
              <td>
                <%= substitute.count %>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>

    </div>

    <script src="/js/uikit.min.js"></script>
    <script src="/js/uikit-icons.min.js"></script>
    <script src="https://www.kryogenix.org/code/browser/sorttable/sorttable.js"></script>
  </body>
</html>
